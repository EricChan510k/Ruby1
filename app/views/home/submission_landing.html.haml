- @current_section = :submission


.row.submission-landing-page
	.container
		.row.first-row

		.row.second-row
			.span3.left-box
				.left-box-content
					%h4 Hi, #{current_user.fullname}!
					%h5 Start a new submission:
				%div{:style => 'margin-top: 8px; text-align: center;'}
					= link_to "Submit<br />Project".html_safe, submission_step_index_path.to_s+'?type=project', :class=>"c_btn lc_btn yc_btn btn_submit_project"
					= link_to "Submit<br />Product".html_safe, submission_step_index_path.to_s+'?type=product', :class=>"c_btn lc_btn yc_btn btn_submit_product"
			.span3.center-box
				.center-box-content
					%h5 Resume an active submission:
					- unless @current_submissions.blank?
						- @current_submissions.each do |editing_submission|
							%p
								= link_to editing_submission.title, home_edit_submission_path(editing_submission.id)
					- else
						%p.note You have no open entries.<br />Start a submission here!
			.span3.right-box
				.right-box-content
					%h5 Your account:
				%div{:style => 'margin-top: 8px; text-align: center;'}
					%a.c_btn.yc_btn.lc_btn.btn_edit_info{:href => edit_user_path} Edit Information
					%a.c_btn.yc_btn.lc_btn.btn_view_finished{:href => home_previous_submissions_path, :style=>"height: 79px;padding-top:17px;"} View<br/>Finished<br/>Submissions