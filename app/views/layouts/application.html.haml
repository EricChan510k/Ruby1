%html
	%head
		%meta{:'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8'}
		%title Interior Design | 2013 Best of Year Awards
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, default-scale=1.0"}
		%meta{:name => "robots", :content => (prod? ? "index,follow" : "noindex,nofollow")}
		%meta{:name => 'title', :content => "Interior Design 2013 Best of Year Awards"}
		%meta{:name => 'description', :content => ''}

		- if false
			- # FACEBOOK OPENGRAPH
			%meta{:property => "fb:admins", :content => "7002294"}
			%meta{:property => "og:title", :content => (!@page_title.blank? ? page_title : t('meta.title'))}
			%meta{:property => "og:url", :content => request.url}
			%meta{:property => "og:description", :content => t('meta.description')}
			%meta{:property => "og:type", :content => "website"}
			%meta{:property => "og:image", :content => 'https://popblock-assets.s3.amazonaws.com/images/logo_icon.png'}

			- # TWITTER CARDS
			%meta{:name => "twitter:site", :content => "@Pop_Block"}
			%meta{:name => "twitter:card", :content => "summary"}
			%meta{:name => "twitter:url", :content => request.url}
			%meta{:name => "twitter:title", :content => (!@page_title.blank? ? page_title : t('meta.title'))}
			%meta{:name => "twitter:description", :content => t('meta.description')}
			%meta{:name => "twitter:image", :content => 'https://popblock-assets.s3.amazonaws.com/images/logo_icon.png'}

			- # GOOGLE +1
			%meta{:itemprop => "name", :content => (!@page_title.blank? ? page_title : t('meta.title'))}
			%meta{:itemprop => "description", :content => t('meta.description')}
			%meta{:itemprop => "image", :content => 'https://popblock-assets.s3.amazonaws.com/images/logo_icon.png'}

		- if prod?
